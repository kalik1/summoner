{
  "compilerOptions": {

    "rootDir": "src/server",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitThis": false,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,

    "declaration": false,
    "emitDecoratorMetadata": true,

    "baseUrl": "./src",
    "paths": {
      "@client/*": [
        "./src/client/*"
      ],
      "@root/*": [
        ".*"
      ],
      "@server/*": [
        "./src/server/*"
      ]
    },

    "module": "commonjs",
    "removeComments": true,

    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "types": [
      "node"
    ],

    "incremental": true,
    "allowJs": true
  },
  "exclude": [
    "**/node_modules/**",
    "ormconfig.js"
  ],
  "include": ["./src/server/*.ts"]
}
